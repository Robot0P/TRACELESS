{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "License Generator",
  "version": "1.0.0",
  "identifier": "com.traceless.license-generator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "License Key Generator",
        "width": 600,
        "height": 700,
        "resizable": true,
        "center": true,
        "decorations": true,
        "minWidth": 500,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  }
}
